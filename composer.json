{
    "name": "satrini/app-slim-angular",
    "description": "App for upload images",
    "homepage": "http://github.com/satrini/app-slim-angular",
    "license": "MIT",
    "authors": [
        {
            "name": "Eduardo Henrique",
            "email": "eduardosatrini@gmail.com",
            "homepage": "https://www.eduardohenrique.com.br"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "illuminate/database": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
	"scripts": {
        "start": "php -S 127.0.0.1:8080 -t public public/index.php",
        "test": "phpunit"
	}

}
